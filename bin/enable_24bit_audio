#!/bin/bash

declare KEY=resample-method
declare VAL=src-sinc-medium-quality

cat /etc/pulse/daemon.conf | \
  sed -e "s/\(^${KEY} = .*$\)/; \1\n${KEY} = ${VAL}/g" | \
  sed -e 's/\(^default-sample-format = .*$\)/; \1\ndefault-sample-format = s24le/g' | \
  sed -e 's/\(^default-sample-rate = .*$\)/; \1\ndefault-sample-rate = 96000/g' 
