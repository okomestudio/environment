#!/bin/bash

readonly CONF=/etc/pulse/daemon.conf

declare -A confitem=(
  [resample-method]=src-sinc-medium-quality
  [default-sample-format]=s24le
  [default-sample-rate]=96000
)

for key in "${!confitem[@]}"; do
  # sed -e "s/\(^${key} = .*$\)/; \1\n${key} = ${confitem[$key]}/g"
  echo "s/\(^${key} = .*$\)/; \1\n${key} = ${confitem[$key]}/g"
done
