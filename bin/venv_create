#!/usr/bin/env bash

# Find the site-package directory of the version to inherit
ver=$(pyenv version | awk '{print $1}')
ver_tokens=(${ver//./ })
majmin="${ver_tokens[0]}.${ver_tokens[1]}"
site_package=~/.pyenv/versions/${ver}/lib/python${majmin}/site-packages/

if [[ ! -d $site_package ]]; then
  echo "The site-package directory does not exist: $site_package"
  exit 1
fi

pyenv virtualenv -p python${majmin} --extra-search-dir=$site_package "$@"
