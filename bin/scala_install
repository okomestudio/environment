#!/bin/bash
#
# Scala Installer for Debian/Jessie

source=http://downloads.lightbend.com/scala/2.11.8/scala-2.11.8.deb

if ! which scala > /dev/null; then
  deb=$(basename $source)
  if [[ ! -e ~/src/$deb ]]; then
    mkdir -p ~/src
    wget $source -O ~/src/$deb
  fi
  sudo dpkg -i ~/src/$deb
else
  echo "Exists: $(scala -version 2>&1)"
fi
