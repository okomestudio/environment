#!/bin/bash
#
# Set up KDE environment

set -xe


# Global shortcuts:

# Audio volumes
kwriteconfig \
    --file kglobalshortcutsrc --group kmix \
    --key decrease_volume 'Alt+\,,Volume Down,Decrease Volume'
kwriteconfig \
    --file kglobalshortcutsrc --group kmix \
    --key increase_volume 'Alt+.,Volume Up,Increase Volume'
kwriteconfig \
    --file kglobalshortcutsrc --group kmix \
    --key mute 'Alt+M,Volume Mute,Mute'


# Windows management
kwriteconfig \
    --file kglobalshortcutsrc --group kwin \
    --key 'Window Maximize' 'Meta+Ctrl+Up,none,Maximize Window'
kwriteconfig \
    --file kglobalshortcutsrc --group kwin \
    --key 'Window Minimize' 'Meta+Ctrl+Down,none,Minimize Window'
kwriteconfig \
    --file kglobalshortcutsrc --group kwin \
    --key 'Window Quick Tile Left' 'Meta+Shift+Left,none,Quick Tile Window to the Left'
kwriteconfig \
    --file kglobalshortcutsrc --group kwin \
    --key 'Window Quick Tile Right' 'Meta+Shift+Right,none,Quick Tile Window to the Right'
