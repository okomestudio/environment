#!/bin/bash
#
# Setup for Logitech Wireless Trackball M570
#

set -xe

. .xsessionrc_helpers

dev_id=$(get_dev_id "Logitech Unifying Device. Wireless PID:1028")
if [[ -n "$dev_id" ]]; then
  # Activate scroll wheel emulation (use the trackball while pressing
  # vertical wheel down).
  xinput --set-prop "$dev_id" "Evdev Wheel Emulation" 1
  xinput --set-prop "$dev_id" "Evdev Wheel Emulation Axes" 6 7 4 5
  xinput --set-prop "$dev_id" "Evdev Wheel Emulation Inertia" 3
  xinput --set-prop "$dev_id" "Evdev Wheel Emulation Timeout" 200
  xinput --set-prop "$dev_id" "Evdev Wheel Emulation Button" 2
fi
