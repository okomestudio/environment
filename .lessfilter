#!/bin/sh
#
# Add syntax highlighting via Pygments
#
# Install Pygments:
#
#   $ pip install Pygments
#
# and add the following lines to ~/.bashrc:
#
#   export LESS='-R'
#   export LESSOPEN='|~/.lessfilter %s'
#
# and save this file as ~/.lessfilter
#

case $1 in
  *.ad[asb]|\
  *.asm|\
  *.awk|\
  *.axp|\
  *.c|\
  *.cc|\
  *.cpp|\
  *.cxx|\
  *.diff|\
  *.ebuild|\
  *.eclass|\
  *.groff|\
  *.h|\
  *.hh|\
  *.hpp|\
  *.hxx|\
  *.inc|\
  *.java|\
  *.js|\
  *.json|\
  *.l|\
  *.lsp|\
  *.m4|\
  *.p|\
  *.pas|\
  *.php|\
  *.pl|\
  *.pm|\
  *.pod|\
  *.sh|\
  *.tex|\
  *.xml|\
  *.xps|\
  *.xsl|\
  *.patch|\
  *.pov|\
  *.ppd|\
  *.py|\
  *.rb|\
  *.sql)
    pygmentize -f 256 -O bg=light $1
    ;;
  *.el|.emacs)
    pygmentize -f 256 -O bg=light -l elisp $1
    ;;
  .bashrc|.bash_aliases|.bash_environment)
    pygmentize -f 256 -O bg=light -l sh $1
    ;;
  *)
    prog=$(head -n1 $1 | grep -E '^#!(|/usr)/bin/env' | cut -d " " -f 2)
    if [ ! -z $prog ]; then
      pygmentize -f 256 -O bg=light -l $prog $1
    fi
    ;;
esac

exit 0
